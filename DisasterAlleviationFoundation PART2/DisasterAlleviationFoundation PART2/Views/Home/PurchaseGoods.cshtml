@model DisasterAlleviationFoundation.Models.GoodsDonationModel

@{
    ViewData["Title"] = "PurchaseGoods";
}

<style>
    .row {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50vh;
    }

    .login-form {
        max-width: 400px;
        width: 100%;
    }

    .register-link {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .register-link .btn-dark:hover {
            color: purple;
            background-color: mediumpurple;
            border-color: white;
        }

    }
</style>

<h1>Purchase Goods withh Funds</h1>
<h5>Balance :R  @ViewBag.TotalBalance</h5>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PurchaseGoods">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Goodname" class="control-label"></label>
                <input asp-for="Goodname" class="form-control" />
                <span asp-validation-for="Goodname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gooddescription" class="control-label"></label>
                <input asp-for="Gooddescription" class="form-control" />
                <span asp-validation-for="Gooddescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoodsPrice" class="control-label"></label>
                <input asp-for="GoodsPrice" class="form-control" />
                <span asp-validation-for="GoodsPrice" class="text-danger"></span>
            </div>
            <br></br>
            <div class="form-group">
                <input type="submit" value="Purchase Good" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<br />
<div>
    <a asp-action="">Back to Dashboard</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
