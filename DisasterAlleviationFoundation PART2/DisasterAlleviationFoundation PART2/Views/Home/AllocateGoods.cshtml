@model DisasterAlleviationFoundation.Models.DisasterModel

@{
    ViewData["Title"] = "AllocateGoods";
}
<style>
    .row {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50vh;
    }

    .login-form {
        max-width: 400px;
        width: 100%;
    }

    .register-link {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .register-link .btn-dark:hover {
            color: purple;
            background-color: mediumpurple;
            border-color: white;
        }

    }
</style>

<h1>AllocateGoods</h1>

<h4>Current Disasters in need of Goods</h4>
<p>@ViewBag.UserList</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AllocateGoods">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
    <label asp-for="goodsID" class="control-label"></label>
    <input asp-for="goodsID" class="form-control" />
    <span asp-validation-for="goodsID" class="text-danger"></span>
</div>
            <div class="form-group">
                <label asp-for="GoodType" class="control-label"></label>
                <select asp-for="GoodType" asp-items="@(new SelectList(ViewBag.GoodsList))" class="form-control"></select>
                <span asp-validation-for="GoodType" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Allocate Goods" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="">Back to Dashboard</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
