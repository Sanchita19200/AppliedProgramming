@model DisasterAlleviationFoundation.Models.MonetaryDonationModel

@{
    ViewData["Title"] = "Donation";
}

<h1 class="text-center">Monetary Donation</h1>

<h4 class="text-center">Empower Change, Make a Difference: Your Monetary Donation Fuels Hope and Resilience!</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Donation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DonationAmount" class="control-label"></label>
                <input asp-for="DonationAmount" class="form-control" />
                <span asp-validation-for="DonationAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DonationDate" class="control-label"></label>
                <input asp-for="DonationDate" class="form-control" type="date" />
                <span asp-validation-for="DonationDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label></label><br />
                <label>
                    <input type="radio" asp-for="IsAnonymous" value="true" checked /> Anonymous
                </label>
                <label>
                    <input type="radio" asp-for="IsAnonymous" value="false" /> Use Username
                </label>
            </div>
            <br />

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Donate</button>
            </div>
        </form>

        <br />
        <div class="text-center mt-4">
            <p>For Assistance with donations</p>
            <p>Email: st10097535@rclearm.edu.za</p>
            <p>Phone: +27 71 071 3402</p>
            <p>Address: Rosebank College Brammfontein <br />Johannesburg</p>
            <br />
        </div>

    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Home">Back to home</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
